<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <!-- Container for lanes or other views, adjust to your needs -->
    <LinearLayout
        android:id="@+id/lanesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white" />

    <!-- Car ImageView -->
    <ImageView
        android:id="@+id/car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/car_top_view_outline_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        app:tint="#03A9F4" />

    <!-- Left Button -->
    <Button
        android:id="@+id/btnLeft"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/baseline_chevron_left_24"
        android:drawablePadding="10dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp" />

    <!-- Right Button -->
    <Button
        android:id="@+id/btnRight"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:drawablePadding="10dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp" />

    <!-- Hearts (Life indicators) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="28dp">

        <ImageView
            android:id="@+id/redheart1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/red_heart_icon" />

        <ImageView
            android:id="@+id/redheart2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/red_heart_icon" />

        <ImageView
            android:id="@+id/redheart3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/red_heart_icon" />

    </LinearLayout>

</RelativeLayout>
